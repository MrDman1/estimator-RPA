<Page x:Class="Nuform.App.Pages.AgentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Automation">

  <Grid Background="#111111">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Margin="24" Grid.Row="0">
      <TextBlock Text="Nuform Automator" FontSize="28" Foreground="White" />
      <TextBlock Text="Choose a workflow" Margin="0,6,0,0" Foreground="#bbbbbb"/>
    </StackPanel>

    <UniformGrid Grid.Row="1" Columns="1" Margin="24,0,24,24">
      <Button Height="44" Margin="0,8,0,0"
              Content="Data entry with SOF"
              Click="DataEntryWithSof_Click"/>
      <Button Height="44" Margin="0,8,0,0"
              Content="SOF generator (panel calculator) + Data entry"
              Click="SofGeneratorDataEntry_Click"/>
      <Button Height="44" Margin="0,8,0,0"
              Content="Estimate generation (Maximizer + NSD [+ Trello])"
              Click="EstimateGeneration_Click"/>
    </UniformGrid>
  </Grid>
</Page>
