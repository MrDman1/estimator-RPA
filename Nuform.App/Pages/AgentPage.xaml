<Page x:Class="Nuform.App.Pages.AgentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Automation Agent">
    <!--
      This page acts as a simple landing page for the Nuform automation agent.
      At startup the application displays this page and prompts the user
      to choose which workflow to run.  New automation features can be added
      by adding additional buttons here and handling their click events in
      the codeâ€‘behind (AgentPage.xaml.cs).
    -->
    <StackPanel Margin="20" VerticalAlignment="Top">
        <TextBlock Text="Welcome to Nuform Automation Agent" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        <TextBlock Text="Select an option:" FontSize="14" Margin="0,0,0,10"/>
        <Button Content="Automate data entry with file input"
                Click="FileInput_Click" Margin="0,0,0,5" Width="300" Height="30"/>
        <Button Content="Automate data entry using calculator"
                Click="CalcAutomation_Click" Margin="0,0,0,5" Width="300" Height="30"/>
        <Button Content="RELINE calculator"
                Click="Calculator_Click" Margin="0,0,0,5" Width="300" Height="30"/>
    </StackPanel>
</Page>